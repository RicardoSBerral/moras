

all:
	@echo -------------------------------------------------------
	@echo --------------------------------- Clasificadores ------
	@echo -------------------------------------------------------
	make -f Makeclsf F="$(F)"
	@echo -------------------------------------------------------
	@echo ---------------------------------------- Lectura ------
	@echo -------------------------------------------------------
	make -f Makelctr F="$(F)"
	@echo -------------------------------------------------------
	@echo ------------------------------------- Utilidades ------
	@echo -------------------------------------------------------
	make -f Makeutil F="$(F)"
	@echo -------------------------------------------------------
	@echo ------------------------------------- Ejecutable ------
	@echo -------------------------------------------------------
	make -f Makerun F="$(F)"
	@echo -------------------------------------------------------
	@echo --------------------------------------------- OK ------
	@echo -------------------------------------------------------

all_sdp:
	@echo -------------------------------------------------------
	@echo --------------------------------- Clasificadores ------
	@echo -------------------------------------------------------
	make -f Makeclsf F="$(F)"
	@echo -------------------------------------------------------
	@echo ---------------------------------------- Lectura ------
	@echo -------------------------------------------------------
	make -f Makelctr F="$(F)"
	@echo -------------------------------------------------------
	@echo ------------------------------------- Utilidades ------
	@echo -------------------------------------------------------
	make -f Makeutil F="$(F)"
	@echo -------------------------------------------------------
	@echo ------------------------------------- Ejecutable ------
	@echo -------------------------------------------------------
	make -f Makerun F="$(F)" all_sdp
	@echo -------------------------------------------------------
	@echo --------------------------------------------- OK ------
	@echo -------------------------------------------------------

debug_ef: libs
	@echo -------------------------------------------------------
	@echo ------------------------------------- Ejecutable ------
	@echo -------------------------------------------------------
	make -f Makerun debug_ef
	@echo -------------------------------------------------------
	@echo --------------------------------------------- OK ------
	@echo -------------------------------------------------------

debug: libs
	@echo -------------------------------------------------------
	@echo ------------------------------------- Ejecutable ------
	@echo -------------------------------------------------------
	make -f Makerun F="$(F)" debug
	@echo -------------------------------------------------------
	@echo --------------------------------------------- OK ------
	@echo -------------------------------------------------------

libs:
	@echo -------------------------------------------------------
	@echo --------------------------------- Clasificadores ------
	@echo -------------------------------------------------------
	make -f Makeclsf F="$(F)" debug
	@echo -------------------------------------------------------
	@echo ---------------------------------------- Lectura ------
	@echo -------------------------------------------------------
	make -f Makelctr F="$(F)" debug
	@echo -------------------------------------------------------
	@echo ------------------------------------- Utilidades ------
	@echo -------------------------------------------------------
	make -f Makeutil F="$(F)" debug

clean:
	rm *.o
	rm *.a
	
